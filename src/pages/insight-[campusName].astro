---
const { campusName = '' } = Astro.params
import config from '../../config'
import Button from '../components/system/Button.astro'
const campus = config.campus
const campusConfig = campus.find(c => c.internalName === campusName)
import Layout from '../layouts/Layout.astro'
import Hero from './Hero.astro'
import BreadCrumb from '../components/system/BreadCrumb.astro'
import Showcase from './Showcase.astro'
import Heading from '../components/system/Heading.astro'
import Text from '../components/system/Text.astro'
import StarStepIcon from '../components/icons/StarStepIcon.astro'
import Image from '../components/system/Image.astro'
import Testimonial from '../components/landingPage/Testimonial.astro'
import Connect from '../components/campus/Connect.astro'
import GoToCta from '../components/GoToCta.astro'
import Footer from '../components/landingPage/Footer.astro'
import TopNavigationBar from '../components/TopNavigationBar.astro'
import Star from '../components/icons/Star.astro'
import TopperCard from '../components/TopperCard.astro'
const leaderMessages = campusConfig?.leaderMessage 
const academic = campusConfig?.academic
const facilities = campusConfig?.facilities
const contact = campusConfig?.contact
const toppers = campusConfig?.toppers
const navigationData = [
  {label: 'Academics', for: "academics"},
  {label: 'Life At Insight', for: "life-at-insight"},
  {label: 'Achievements', for: "achievements"},
  {label: 'Contact Us', for: "contact-us"},
]
const colors = [
  ["#EFFAF8","primary","neutral-dark-grey"],
  ["#FCF8EB","black-100","neutral-dark-grey"],
  ["#EFFAF8","primary","neutral-dark-grey"],

]
const rounded = [
  "rounded-tl-[250px]", "", "rounded-bl-[250px]"
]
---
<Layout title='Welcome'>
  <TopNavigationBar />
<div
  class="h-[90vh]"
>
    <Hero
      config={
        {
          title: campusConfig?.title,
         
        }
      }
       slideImages={ campusConfig?.images.map(item => ({
        "slide": item, position: 'center'
      }))}
      showSlide={true}
      contentDirection="items-end"
      bgImageBgColor="linear-gradient(359deg, #1B2226 0%, rgba(19, 112, 167, 0.00) 100%)"
    >
    <div slot="title">
      {campusConfig?.title ? <Text type="h2" class="mt-auto font-bold text-yellow">{campusConfig?.title}</Text> : null}
    </div>
    <div slot="subHeading">
      {campusConfig?.description ? <Text type="p" class="max-w-[57ch]">{campusConfig?.description}</Text> : null}
    </div>
    </Hero>
</div>
<!-- <BreadCrumb
    items={navigationData}
    label={"Jump To"}
    class={'bg-white'}
  /> -->
<Showcase
  title="Events Bulletin"
/>

<!-- section  -->
<div class="flex p-xl justify-center gap-l flex-col scroll-mt-24 max-sm:p-l" id="principl-note">
  <Heading first="Principalâ€™s" second={"Note"} subtitle="A GUIDING MESSAGE FROM OUR LEADER" />
  <div class="flex items-center justify-center gap-l max-sm:flex-col">
    <img class="w-[250px]" src={
      leaderMessages?.[0].image
    } alt="">
    <div class="flex flex-col gap-r">
      <Text type="regular" class="max-w-[73ch] text-neutral-dark-grey">
        {leaderMessages?.[0].body}
      </Text>
      <Text type="span" class='text-black-100 uppercase font-display tracking-[1.8px] font-semibold'>
        {leaderMessages?.[0].name}
      </Text>
    </div>
  </div>
</div>
<!-- section  -->
<div id="academics" style="scroll-margin: 60px;" class="p-xl px-0  flex flex-col justify-center gap-l scroll-m-14 max-sm:p-r max-sm:gap-r">
  <Heading first="Academic" second={"Landscape"} subtitle="Empowering Every Learner ">
  </Heading>
  {
    academic?.map((item,index) => {
      return <div class={`flex flex-col px-xl  justify-center gap-l max-sm:p-0`}> 
                <div style={`background: ${colors[index][0]}`}>
                  <div class="flex p-xl pr-0 justify-center gap-xl item-center max-md:flex-col max-md:p-r">
                    <div class="flex gap-r flex-col">
                      <div class="flex gap-r items-center">
                        <Text type='span'>
                          <StarStepIcon
                            step='mini'
                            class={`w-10 h-10 text-${colors[index][1]}`}
                          />
                        </Text>
                        <Text type="h3" class={`text-${colors[index][1]} font-bold`}>
                          {item.title}
                        </Text>
                      </div>
                      <p class="max-w-[70ch] text-xl max-sm:text-base">
                        {item.description}
                      </p>
                      <Text type="subtitle" class={`text-${colors[index][1]} `} style={{textAlign: "left"}}>
                        highlights: 
                      </Text>
                      <ul class="flex flex-col gap-r">
                        {item.highlights?.map(item => {
                          return <li class="text-xl flex gap-[7px] items-center max-sm:text-base">
                              <span class={`text-${colors[index][1]} w-6 h-6`}>
                                <Star
                                  class={`text-${colors[index][1]} w-6 h-6 max-sm:w-5 max-sm:h-5`}
                                />
                              </span>
                              {item}
                            
                            </li>
                        })}
                      </ul>
                    </div>
                    <div class="">
                      <Image 
                        className={`${rounded[index]} max-md:rounded-none h-[95%] object-cover`}
                        src={
                          item.images[0]
                        }
                      />
                    </div>
                </div>
                </div>
              
              </div>
    })
  }
</div>
<!-- section  -->
<div id="life-at-insight" class="px-xl flex flex-col justify-center gap-l scroll-mb-14 max-sm:p-m">
  <div class="flex flex-col gap-l px-xl">
    <Heading first="Life at" second={"Insight"} subtitle="Join Our Commitment to All Learners">
    </Heading>
    <div class="flex items-center gap-l max-md:flex-col">
      <div class="flex gap-l flex-col">
        <p class="text-2xl max-sm:text-base">
          At Insight Academy, we are dedicated to fostering well-rounded individuals by integrating academic education with essential life skills.
        </p>
        <p class="text-2xl max-sm:text-base">
          Embracing a holistic approach, our students spend <span class="text-primary font-bold">4 hours on academics</span> and <span class="text-primary font-bold">and 1 hour engaging in outdoor activities</span>, ensuring a balanced and fulfilling educational journey.    </p>
      </div>
      <img src={campusConfig?.images[0]} class="w-[326px] h-[198px]" />
    </div>
    
  </div>
  <div class="flex justify-center flex-col gap-l">
    <div class="flex gap-r items-center max-md:justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" viewBox="0 0 21 21" fill="none">
        <g clip-path="url(#clip0_1125_7345)">
